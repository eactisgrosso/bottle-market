  "version": "0.2.0",
  "configurations": [
    {
      "name": "Shop Web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/packages/shop"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "API",
      "protocol": "inspector",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "."
    }
  ],
  "compounds": [
    {
      "name": "Shop All",
      "configurations": ["API", "Shop Web"]
    }
  ]
}
